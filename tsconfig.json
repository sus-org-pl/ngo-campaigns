{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "preserveSymlinks": false,
    "verbatimModuleSyntax": true,
		"isolatedModules": true,
    "rewriteRelativeImportExtensions": true
  },
  "include": ["src"]
}
